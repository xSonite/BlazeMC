<body>
    <div class="container">
        <h1>Join My Minecraft Server</h1>
        <p>Step 1: Connect to the VPN</p>
        <button id="connectVPN">Connect to VPN</button>
        <button id="disconnectVPN" class="disconnect" style="display:none;">Disconnect VPN</button>
        <p>Step 2: Click below to join Minecraft!</p>
        <button onclick="joinMinecraft()">Join Minecraft</button>
    </div>

    <script>
        function connectVPN() {
            alert("Connecting to VPN..."); // Simulate VPN connection
            document.getElementById('connectVPN').style.display = 'none';
            document.getElementById('disconnectVPN').style.display = 'inline-block';
        }

        function disconnectVPN() {
            alert("Disconnecting from VPN..."); // Simulate VPN disconnection
            document.getElementById('connectVPN').style.display = 'inline-block';
            document.getElementById('disconnectVPN').style.display = 'none';
        }

        function joinMinecraft() {
            let serverIP = "5.59.174.17"; // Your IP address
            let serverPort = "19132"; // Default Minecraft Bedrock port
            window.location.href = `minecraft://?addExternalServer=MyServer|${serverIP}:${serverPort}`;
        }

        document.getElementById("connectVPN").addEventListener("click", connectVPN);
        document.getElementById("disconnectVPN").addEventListener("click", disconnectVPN);
    </script>
